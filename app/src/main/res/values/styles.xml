<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">@dimen/middle_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Description">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">start</item>
    </style>
</resources>